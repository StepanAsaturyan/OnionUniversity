@{
    ViewData["Title"] = "Students";
}

<div class="text-center">
    <h3 class="display-4">List of courses of OnionUniversity:</h3>
    <table>
        <tr>
            <td><p>Id</p></td>
            <td><p>Name</p></td>
            <td><p>Description</p></td>
        </tr>
        @foreach (var course in Model)
        {
            <tr>
                <td><p>@course.CourseId</p></td>
                <td><p><a href="/Home/GetGroupsByCourseId?courseId=@course.CourseId">@course.Name</a></p></td>
                <td><p>@course.Description</p></td>
            </tr>
        }
    </table>
</div>
